<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 ">
        <h1 class="text-center text-red">コメント 画像投稿</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :image, class: 'text-red' %>
            <%= f.file_field :image %>
          </div>
          
          <div class="form-group">
            <%= f.label :description, class: 'text-red' %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <% if logged_in? %>
          <%= f.submit "投稿", class: 'btn-block btn-red' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

