<table class="eventlist">
  <thead>
    <tr>
      <th class="event1">題名</th>
      <th class="event1">説明</th>
      <th class="event1">開始</th>
      <th class="event1">終了</th>
      <th colspan="3"><%= link_to '予定作成', new_calendar_path %></th>
    </tr>
  </thead>

  <tbody>
        <%= yield %>
    <% @calendars.each do |calendar| %>
      <tr>
        <td class="event2"><%= calendar.title %></td>
        <td class="event2"><%= calendar.description %></td>
        <td class="event2"><%= calendar.start_date %></td>
        <td class="event2"><%= calendar.end_date %></td>
        <td class="event21"><%= link_to 'Show', calendar %></td>
<% if logged_in? && current_user.id == calendar.user_id %>
        <td class="event21"><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td class="event21"><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: '予定を削除しますか?' } %></td>
<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
       <div id="calendar"></div>
