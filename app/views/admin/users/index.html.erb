<div class="topic-index-wrapper">
<h1 class="userindex">登録済ユーザー一覧</h1>
<table border="1" align="center">
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>登録日</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
      <% if user.id != 1 %>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'ユーザーを削除しますか?' } %></td>
      <% else %>
        <td> </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
