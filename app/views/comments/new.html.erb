<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-red">返信</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :reply, class: 'text-red' %>
            <%= f.text_area :reply, class: 'form-control' %>
          </div>
          <%= f.hidden_field :topic_id, value: params[:topic_id] %>
          <% if logged_in? %>
          <%= f.submit "返信", class: 'btn-block btn-red' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
